<!-- Page Content  -->
<div id="content" class="p-4 p-md-5 pt-5">
    <span id="senderId" style="display: none;">{{user._id}}</span>

    {{!-- List user join the app chat --}}
    <div class="row">
        <div class="col-md-3">
            <ul class="list-group">
                {{#equals data.length}}
                    {{#each data}}
                        <li class="list-group-item cursor-pointer user-list text-dark user-list-item" id="list-group_item" data-id="{{this._id}}">
                            {{#isOnline this.is_online}}
                                <span class="status-indicator_online"></span>
                            {{else}}
                                <span class="status-indicator_offline"></span>
                            {{/isOnline}}
                            <img src="/images/{{this.image}}" alt="" id="image" data-id="{{this.image}}">
                            <p>{{this.fullName}} </p>
                        </li>
                    {{/each}}
                {{/equals}}
            </ul>
        </div>

        {{!-- dashboard to chat --}}
        <div class="col-md-9">
        <h3 class="start-head">Click icon friend to start the Chat App</h3>
        <div class="chat-section">
            <div id="chat-container">
            </div>

            <form action="" id="chat-form">
                <input type="text" name="message" id="message" placeholder="Enter the message..." required>
                <input type="submit" value="Send Message" class="btn btn-primary">
            </form>
        </div>
    </div>
    </div>    
</div>
<link rel="stylesheet" href="/css/styleDashboard.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="/js/dashboard.js"></script>
