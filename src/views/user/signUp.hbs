<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login form</title>
    <link rel="stylesheet" href="/css/styleLogIn.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    {{!-- show flash message --}}
    {{#if flash}}
    <div class="custom-dialog">
        <div class="alert fixed-top alert-dismissible alert-{{flash}} text-center w-25 mx-auto my-3">
            <button class="dialog-close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            <div class="dialog-topic"><strong>Notification</strong></div>
            <div>{{message}}</div>
        </div>
    </div>
    {{/if}}

    {{!-- sign up --}}
     <div class="container">
        <div class="brand">
            <h2>WELCOME SIMPLE CHAT APP</h2>
            <h1>SIMPLE CHAT APP</h1>
        </div>
        <div class="wrapper">
            <form action="/api/auth/register" method="POST" >
                <h1>Sign up</h1>

                <div class="input-box">
                    <input type="text" placeholder="Full name" name="fullName">
                    <i class='bx bxs-user'></i>
                </div>

                <div class="input-box">
                    <input type="email" placeholder="Email" name="email">
                    <i class='bx bxs-envelope'></i>
                </div>

                <div class="input-box">
                    <input type="password" placeholder="Password" name="password" required>
                    <i class='bx bxs-lock-alt'></i>
                </div>

                {{!-- <div class="input-file">
                    <input type="file" placeholder="Image" name="image" id="input-file_image">            
                </div> --}}

                {{#if err}}
                <div class="alert alert-danger">{{err}}</div>
                {{/if}}

                <button type="submit" class="btn">Sign up</button>

                <div class="register-link">
                    <p>Do you want to login account?
                        <a href="/api/auth/login">Log in</a>
                    </p>
                </div>
            </form>
        </div>
     </div>

    <script>
        // set flash ẩn sau một khoảng thời gian
        setTimeout(function() {
            $(".custom-dialog").fadeOut("slow");
        }, 2000);  
    
    </script>
</body>

</html>